ul.codex-form, .margin-unit-form, .text-unit-form
	margin-bottom 200px

ul.codex-form, .margin-unit-form > .hire-multi-form > ul > li > div.hire-forms-form > ul
	list-style none
	margin 0
	padding 0

	li.well
		well()
		margin-top 60px
		position relative

	li.well
		& > label
			display block
			color #999
			width 100%
			font-size 1.2em
			margin-bottom 0.3em
			position absolute
			top -26px

		&.small-inputs
			input
				width 100px

			li.large
				input
					width 226px

			span, label
				line-height 30px

			input, span
				margin-right 10px

		&.marginal-activity > ul > li > *
			inline-block()

		&.marginal-activity > ul > li > label
			width 170px

		&.marginal-activity > ul > li > span
			width 120px

		&.marginal-activity > ul > li > div.hire-input
			width 100px
			margin-right 10px

		&.page-dimensions > div > *
			inline-block()

	li.well > ul
		list-style none
		margin 0
		padding 0

		& > li
			// & > ul, & > div
			// 	// well()
			// 	max-width 100%
			// 	width 100%

			& > .hire-multi-form
				background none
				box-shadow none
				padding 0

			& > ul > li
				margin-bottom 20px

				&:last-child
					margin-bottom 0
