div.hire-checkbox
	fill #999

ul.hire-form
	list-style none
	margin 0
	padding 0
	
	& > li
		margin-bottom 20px
		
		&:last-child
			margin-bottom 10px
	
		label, & > ul, & > div
			inline-block()

		& > ul, & > div
			max-width calc(100% - 200px)
			
		& > ul
			list-style none
			
		label
			width 200px
			
ul.edit-codex
	width 90%
	margin 0 5%
	
	& > li > label
		margin-left 20px
	
	li.well
		& > label
			display block
			color #999
			width 100%
			font-size 1.2em
		
		& > ul, & > div
			background white
			box-shadow 0 1px 4px #999
			padding 20px
			max-width 100%
			width 100%
			
		& > ul > li
			margin-bottom 20px
			
		& > div > textarea
			width 100%
			border none
			outline none
			font-family inherit
			font-size 1em
			
		&.small-inputs
			input
				width 100px
				
			span
				line-height 30px
				
			input, span
				margin-right 10px
				
		div.hire-multi-form
			background none
			box-shadow none
			padding 0
			margin-bottom 40px
			position relative
						
			& > button
				position absolute
				margin-top 6px
				right 20px

						
			& > ul
				margin 0
				padding 0
				list-style none
				
				& > li
					box-sizing border-box
					position relative
					background white
					box-shadow 0 1px 4px #999
					padding 20px
					max-width 100%
					width 100%
					margin-bottom 6px
					
					& > button
						position absolute
						top 20px
						right 20px
						
						&:hover
							background red
						
	div.hire-multi-form button
		border none
		background none
		font-weight bold
		font-size 1.2em
		cursor pointer
		width 24px
		outline none
		
		&:hover
			color white
			background orange
		
		
	input, textarea, .hire-select .input-container
		inline-block()
		border 1px solid #CCC
		width 360px
		padding 4px 6px
		font-size 1em
		
	input, textarea
		outline none

	.hire-select 
		width 360px
		
		& .input-container button
			top 4px
	
	.hire-list
		& > span
			small-gray()
		
		& > ul
			padding 0 0 0 20px
			margin 0
			list-style-type disc
			
	.hire-locality
		width 100%
		
		.hire-select
			inline-block()
			width 30%
			margin-right 5%
			
			&:last-child
				margin-right 0
			
			.input-container
				width 100%
				
				.input.placeholder
					small-gray()