.hire-multi-form
	min-width 44px
	position relative
	display inline
	padding-left 10px

	// List of forms
	& > ul.form-list
		margin 0
		padding 0
		list-style none

		// One form
		& > li.form
			box-sizing border-box
			margin-bottom 20px
			max-width 100%
			padding 20px
			position relative
			transition all 250ms
			width 100%

			&:hover, &.new
				well()

				button.hire-remove-form
					opacity 1

			&.new
				box-shadow 1px 10px 30px rgba(0, 0, 0, 0.2), -1px -1px 1px rgba(0, 0, 0, 0.04)

			button.hire-remove-form
				removeButton()
				
li.well > .hire-multi-form
	display block

ul.codex-form > li > label
	line-height 24px
