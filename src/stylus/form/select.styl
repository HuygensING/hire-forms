.hire-select
	background white
	min-width 120px
	position relative
	width 360px

	.input-container
		border 1px solid #CCC
		cursor pointer
		position relative
		width 100%

		.input
			select-none()
			height 20px
			line-height 20px
			overflow hidden
			white-space nowrap

		button
			background none
			border none
			color #999
			cursor pointer
			height 20px
			outline none
			position absolute
			right 2px
			top 4px
