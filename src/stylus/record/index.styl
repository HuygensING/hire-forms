.codex-record
	margin-bottom 180px

	.codex-record-body
		margin 0 5%

		& > div, & > img
			inline-block()

		& > div
			width 60%

		& > img
			margin-left 5%
			width 35%

		.well
			h3
				font-size 1em
				font-weight normal
				margin 20px 0 0 0

				&.no-margin
					margin-top 0

	// & > .hire-tabs > .hire-tab
	// 	max-width 720px
	// 	margin auto


	h2, .edit-icon, label + ul
		inline-block()

	h2
		margin 24px 0 48px 5%
		padding-right 12px
		width calc(90% - 24px)

	.edit-icon
		fill msBlue
		height 24px
		margin-top 24px
		width 24px

	.annotation-type, .specific-phenomenon
		font-size 0.9em
		margin-bottom 24px

		&:last-child
			margin-bottom 0

		.text
			margin-bottom 2px
