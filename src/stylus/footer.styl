footer
	position fixed
	bottom 0
	left 0
	right 0
	height 60px
	background #EEE
	box-shadow -1px 0 3px #CCC

	.dates
		padding 10px
		20px
		font-size 0.8em
		color #BBB
		left calc(5% + 240px)
		position absolute

	button
		border none
		background msGray
		// background none
		color darken(msDarkGray, 15%)
		// font-weight bold
		text-transform uppercase
		font-size 0.9em
		padding 10px 20px
		cursor pointer
		outline none
		top 12px
		position absolute


		&.cancel
			left 5%

			&:hover
				box-shadow 0 2px 3px rgba(0, 0, 0, 0.15), 0 6px 12px rgba(0, 0, 0, 0.1)

		&.delete
			right calc(5% + 100px)

			&:hover
				color msLighterBlue
				background msRed
				box-shadow 0 2px 3px rgba(0, 0, 0, 0.3), 0 6px 12px rgba(0, 0, 0, 0.1)

		&.save
			right 5%

			&:hover
				color msLighterBlue
				background msLightBlue
				box-shadow 0 2px 3px rgba(0, 0, 0, 0.3), 0 6px 12px rgba(0, 0, 0, 0.1)
