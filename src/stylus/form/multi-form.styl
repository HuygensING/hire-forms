.hire-multi-form
	min-width 44px
	position relative

	// List of forms
	& > ul
		margin 40px 0 0 0
		padding 0
		list-style none

		// One form
		& > li
			box-sizing border-box
			position relative
			max-width 100%
			width 100%
			padding 10px
			transition all 250ms

			&:hover
				well()

				.hire-forms-form li
					margin-bottom 20px

					label
						color #444
						font-size 1em

					input, textarea, .hire-select > .input-container
						border 1px solid #CCC

					.hire-select > .input-container > button
						display block

				button.hire-remove-form
					opacity 1

			.hire-forms-form li
				margin-bottom 0
				transition all 250ms

				label
					color #888
					font-size 0.8em
					line-height 30px
					transition all 250ms

				input, textarea, .hire-select > .input-container
					border 1px solid white
					transition all 250ms
					resize none

				.hire-select > .input-container > button
					display none

			button.hire-remove-form
				position absolute
				border none
				background none
				color msGray
				font-weight bold
				font-size 1.2em
				cursor pointer
				outline none
				top 10px
				right 10px
				opacity 0
				transition all 250ms

				&:hover
					color msLighterBlue
					box-shadow 0 2px 3px rgba(0, 0, 0, 0.4), 0 6px 12px rgba(0, 0, 0, 0.2)
					background msRed