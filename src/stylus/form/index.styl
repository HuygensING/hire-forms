div.hire-forms-form > ul
	list-style none
	margin 0
	padding 0

	& > li
		margin-bottom 20px

		&:last-child
			margin-bottom 10px

		label, & > ul, & > div
			inline-block()

		& > ul, & > div
			max-width calc(100% - 200px)

		& > ul
			list-style none

		label
			width 200px

	&.texts-form, &.persons-form
		& > li > div
			max-width initial

		& > li >	button
			margin-top 20px
			border none
			background msGray
			color darken(msDarkGray, 15%)
			font-weight bold
			font-size 0.9em
			padding 10px 20px
			cursor pointer
			outline none

			&:hover
				color msLighterBlue
				background msLightBlue
				box-shadow 0 2px 3px rgba(0, 0, 0, 0.4), 0 6px 12px rgba(0, 0, 0, 0.2)

	div, ul
		box-sizing border-box

input, textarea, .hire-select .input-container
	inline-block()
	border 1px solid #CCC
	width 360px
	padding 4px 6px
	font-size 1em

input, textarea
	outline none

textarea
	font-family inherit