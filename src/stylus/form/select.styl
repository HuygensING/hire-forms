.hire-select
	background white
	min-width 120px
	position relative
	width 360px

	.input-container
		border 1px solid #CCC
		position relative
		width 100%

		.input
			height 20px
			line-height 20px
			select-none()
			cursor default

		button
			cursor pointer
			position absolute
			right 2px
			top 4px
			height 20px
			background none
			border none
			color #999
			outline none