@import './stylus/functions.styl'

html, body
	margin 0
	padding 0
	font-size 16px
	background #EEE
	font-family: Helvetica
	
body
	padding-bottom 200px
	
header
	width 90%
	margin-left 5%

nav.menu, .elements
	inline-block()
	
nav.menu
	margin-left 5%
	width 20%
	
	ol
		list-style none
		margin 0
		padding 0
		
.elements
	width 70%
	
	.element-type
		background white
		padding 20px
		box-shadow 0 1px 4px #999
	
	h2
		margin 20px 0 6px 0
		color gray
		font-weight normal
		font-size 1.2em
		
		&:first-child
			margin-top 0
		
	h3
		margin 30px 0 6px 0
		padding 0
		font-weight normal
		font-size 1em
		
		&:first-child
			margin-top 0
			
input.hire-input
	width 100%
	border 1px solid #DDD
	padding 4px 6px
	box-sizing border-box
	font-size 1em
	
.hire-list, .hire-mutable-list, .hire-combo-list, .input-container
	box-shadow 0 1px 4px #999
	padding 20px
	width 300px
	background white
	
.hire-list > span
	font-style italic
	font-size 0.8em
	color #999

.hire-mutable-list, .hire-combo-list
	.hire-list
		width auto
		box-shadow none
		padding 0
		background none
	
.hire-autocomplete-options
	z-index 1000
	background white
	width 90%
	padding 0
	margin 0 0 0 5%
	list-style none
	box-shadow 0 1px 4px #999
	box-sizing border-box
	
	li
		border-bottom 1px solid #EEE
		padding 4px 6px
		
		&.highlight
			background yellow