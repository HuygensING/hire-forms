.hire-list-editor
	height 100%

	.hire-list-filter, .hire-forms-form
		inline-block()

	.hire-list-filter
		width 40%
		height 100%

		input.hire-input
			width 100%
			height 30px

		.hire-options
			box-sizing border-box
			width 100%
			margin 0
			height calc(100% - 50px - 30px)
			max-height 100%

	div.hire-forms-form > ul
		margin-left 5%
		width 55%

		& > li
			border-bottom 1px solid #DDD
			padding-bottom 20px

			&:last-child
				border none

		label, input
			inline-block()

		label
			color #888
			width 30%
			line-height 28px

		input
			width 70%

	ul.filtered-values
		list-style none
		padding 7px 0 0 7px
		margin 0

		li
			cursor pointer