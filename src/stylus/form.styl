.hire-select
	position relative
	min-width 120px
	background white
			
	.input-container
		border 1px solid #CCC
		position relative
		width 100%
		z-index 1001
		
		.input
			height 20px
			line-height 20px	
			select-none()
			cursor default
		
		button
			cursor pointer
			position absolute
			right 2px
			top 0
			height 20px
			background none
			border none
			color #999
			outline none
			
ul.hire-options
	position absolute
	z-index 1000
	background white
	border 1px solid #CCC
	border-top none
	
.hire-textarea
	outline none