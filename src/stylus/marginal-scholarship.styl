.hire-multi-form
	min-width 44px
	margin-bottom 40px
	position relative
	
	button.hire-add-form, button.hire-remove-form
		position absolute
		border none
		background msGray
		color msDarkGray
		font-weight bold
		font-size 1.2em
		cursor pointer
		width 24px
		outline none
		
		&:hover
			color msLighterBlue
			box-shadow 0 2px 3px rgba(0, 0, 0, 0.4), 0 6px 12px rgba(0, 0, 0, 0.2)

	button.hire-add-form
		margin-top 6px
		right 20px
	
		&:hover
			background msLightBlue
	
	button.hire-remove-form
		top 20px
		right 20px
		
		&:hover
			background msRed

	& > button.hire-add-form
		margin-top 0

	& > ul
		margin 0
		padding 0
		list-style none
		
		& > li
			box-sizing border-box
			position relative
			background white
			box-shadow 0 1px 4px #BBB
			padding 20px
			max-width 100%
			width 100%
			margin-bottom 6px