ul.codex-form, .margin-unit-form, .text-unit-form
	margin-bottom 200px

ul.codex-form, .margin-unit-form > .hire-multi-form > ul > li > div.hire-forms-form > ul
	list-style none
	margin 0
	padding 0

	// & > li > label
	// 	margin-left 20px

	li.well
		well()
		margin-top 60px
		position relative

		& > label
			display block
			color #999
			width 100%
			font-size 1.2em
			margin-bottom 0.3em
			position absolute
			// margin-top -40px
			top -26px

		& > ul, & > div
			// well()
			max-width 100%
			width 100%

		& > .hire-multi-form
			background none
			box-shadow none
			padding 0

		& > ul > li
			margin-bottom 20px

			&:last-child
				margin-bottom 0

		& > div > textarea
			width 100%
			border none
			outline none
			font-size 1em
			padding 0

		&.small-inputs
			input
				width 100px

			span
				line-height 30px

			input, span
				margin-right 10px